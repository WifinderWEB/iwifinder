{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Content list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Alias</th>
                <th>Anons</th>
                <th>Show_editor_anons</th>
                <th>Image_path</th>
                <th>Image_origin_name</th>
                <th>Content</th>
                <th>Show_editor_content</th>
                <th>Big_image_path</th>
                <th>Big_image_origin_name</th>
                <th>Is_active</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('content_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.alias }}</td>
                <td>{{ entity.anons }}</td>
                <td>{{ entity.showeditoranons }}</td>
                <td>{{ entity.imagepath }}</td>
                <td>{{ entity.imageoriginname }}</td>
                <td>{{ entity.content }}</td>
                <td>{{ entity.showeditorcontent }}</td>
                <td>{{ entity.bigimagepath }}</td>
                <td>{{ entity.bigimageoriginname }}</td>
                <td>{{ entity.isactive }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('content_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('content_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('content_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
