{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Content</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ entity.title }}</td>
            </tr>
            <tr>
                <th>Alias</th>
                <td>{{ entity.alias }}</td>
            </tr>
            <tr>
                <th>Anons</th>
                <td>{{ entity.anons }}</td>
            </tr>
            <tr>
                <th>Show_editor_anons</th>
                <td>{{ entity.showeditoranons }}</td>
            </tr>
            <tr>
                <th>Image_path</th>
                <td>{{ entity.imagepath }}</td>
            </tr>
            <tr>
                <th>Image_origin_name</th>
                <td>{{ entity.imageoriginname }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ entity.content }}</td>
            </tr>
            <tr>
                <th>Show_editor_content</th>
                <td>{{ entity.showeditorcontent }}</td>
            </tr>
            <tr>
                <th>Big_image_path</th>
                <td>{{ entity.bigimagepath }}</td>
            </tr>
            <tr>
                <th>Big_image_origin_name</th>
                <td>{{ entity.bigimageoriginname }}</td>
            </tr>
            <tr>
                <th>Is_active</th>
                <td>{{ entity.isactive }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('content') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('content_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
